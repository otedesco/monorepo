{
    "name": "monorepo",
    "version": "0.0.0",
    "private": true,
    "packageManager": "pnpm@9.15.4",
    "scripts": {
        "storybook": "pnpm --filter storybook-host start",
        "storybook:start:dev": "pnpm --filter storybook-host start:dev",
        "storybook:build": "pnpm --filter storybook-host build",
        "storybook:visual:test": "pnpm --filter storybook-host visual:test",
        "supabase:start": "npx supabase start",
        "supabase:stop": "npx supabase stop",
        "supabase:functions:serve": "npx supabase functions serve",
        "supabase:gen:types": "npx supabase gen types typescript --local > packages/api-client/src/types/supabase.ts",
        "env:setup": "ts-node scripts/env-setup.ts all",
        "db:migration:new": "npx supabase migration new",
        "db:reset": "npx supabase db reset",
        "db:seed": "npx tsx seed.ts",
        "db:seed:full": "pnpm db:reset && pnpm db:seed:sync && pnpm db:seed",
        "db:seed:sync": "npx @snaplet/seed sync && pnpm supabase:gen:types"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "devDependencies": {
        "@snaplet/copycat": "^6.0.0",
        "@snaplet/seed": "0.98.0",
        "@testing-library/jest-dom": "^6.1.0",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.5.0",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "@vitest/ui": "^1.0.0",
        "eslint": "^8.57.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-react": "^7.33.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jsdom": "^23.0.0",
        "postgres": "^3.4.7",
        "supabase": "^2.65.5",
        "ts-node": "^10.9.2",
        "turbo": "latest",
        "typescript": "^5.0.0",
        "vitest": "^1.0.0"
    }
}